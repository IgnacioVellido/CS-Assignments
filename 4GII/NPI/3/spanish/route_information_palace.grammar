#JSGF V1.0;

grammar route_information_palace;

public <route_information_palace> 
    = [<polite>] <buy> [<polite>] {palace = 'buy';}
    | [<polite>] <price> [<polite>] {palace = 'price';}
    | [<polite>] <information> [<polite>] {palace = 'info';};

<buy> = pagar | comprar | pago ;
<price> = precio | coste | [cuanto] vale | precios;
<information> = informacion | info | [di] [dime] mas;

<polite> = por favor | podria [decir] [decirme] | le importaria [decir] [decirme];