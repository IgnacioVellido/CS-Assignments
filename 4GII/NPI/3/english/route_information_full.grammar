#JSGF V1.0;

grammar route_information_full;

public <route_information_full> 
    = [<polite>] <buy> [<polite>] {full = 'buy';}
    | [<polite>] <price> [<polite>] {full = 'price';}
    | [<polite>] <information> [<polite>] {full = 'info';};

<buy> = pay | buy | shop | purchase;
<price> = price | value | cost | [how] much | prices;
<information> = information | info | tell me more [about];

<polite> = i want [to] | please [tell] | would you [tell me] | please say;