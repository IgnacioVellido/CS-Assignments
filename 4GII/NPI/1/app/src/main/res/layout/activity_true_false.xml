<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alhambra_background2"
    tools:context=".TrueFalse">

    <TextView
        android:id="@+id/tv_true_false"
        android:layout_width="308dp"
        android:layout_height="238dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:text="Was the Alhambra declared World Heritage Site in 2004?





        Swipe left with two fingers for TRUE or right for FALSE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>